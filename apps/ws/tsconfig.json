{
  "compilerOptions": {
    "target": "es2016",
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/db/*": [
        "../../packages/db/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "routes/**/*",
    "**/*.js"
  ],
  "outDir": "dist"
}